<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <%= render @friend %>
    </tr>
  </tbody>
</table>

<div>
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
  <%= link_to "Destroy this friend", @friend, 'data-turbo-method': :delete, class:"btn btn-secondary"  %>
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary"  %>
</div>
