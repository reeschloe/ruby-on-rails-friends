<h1>Friends List</h1>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <%= render friend %>
          <td>
            <%= link_to "Show", friend %>
            <%= link_to "Edit", edit_friend_path(friend) %>
            <%= link_to "Destroy", friend, method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>

<%= link_to "New friend", new_friend_path , class:"btn btn-secondary" %>

